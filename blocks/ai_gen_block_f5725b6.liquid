{% doc %}
  @prompt
    I need contact form section which contain Full Name, Email, Phone Number, Message field for user to submit as a inquiry
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.form_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    text-align: {{ block.settings.text_align }};
  }

  .ai-contact-form__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.subheading_margin_bottom }}px;
    text-align: {{ block.settings.text_align }};
  }

  .ai-contact-form__fields-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.field_spacing }}px;
  }

  .ai-contact-form__field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 500;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.input_font_size }}px;
    color: {{ block.settings.input_text_color }};
    background-color: {{ block.settings.input_background_color }};
    transition: border-color 0.3s ease;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: {{ block.settings.textarea_height }}px;
    resize: vertical;
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
  }

  .ai-contact-form__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
  }

  .ai-contact-form__success-{{ ai_gen_id }} {
    padding: 16px;
    background-color: {{ block.settings.success_background_color }};
    color: {{ block.settings.success_text_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: {{ block.settings.field_spacing }}px;
    text-align: center;
  }

  .ai-contact-form__error-{{ ai_gen_id }} {
    padding: 16px;
    background-color: {{ block.settings.error_background_color }};
    color: {{ block.settings.error_text_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: {{ block.settings.field_spacing }}px;
  }

  .ai-contact-form__error-list-{{ ai_gen_id }} {
    margin: 0;
    padding-left: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-{{ ai_gen_id }} {
      padding: {{ block.settings.form_padding | times: 0.6 }}px;
    }

    .ai-contact-form__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-contact-form__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-form-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {%- if block.settings.heading != blank -%}
    <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {%- endif -%}

  {%- if block.settings.subheading != blank -%}
    <div class="ai-contact-form__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
  {%- endif -%}

  {%- form 'contact' -%}
    {%- if form.posted_successfully? -%}
      <div class="ai-contact-form__success-{{ ai_gen_id }}" id="ai-contact-form-success-{{ ai_gen_id }}">
        {{ block.settings.success_message }}
      </div>
    {%- endif -%}

    {%- if form.errors -%}
      <div class="ai-contact-form__error-{{ ai_gen_id }}" id="ai-contact-form-error-{{ ai_gen_id }}">
        <strong>{{ block.settings.error_heading }}</strong>
        <ul class="ai-contact-form__error-list-{{ ai_gen_id }}">
          {%- for field in form.errors -%}
            <li>{{ field | capitalize }} {{ form.errors.messages[field] }}</li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}

    <div class="ai-contact-form__fields-{{ ai_gen_id }}">
      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-name-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          {{ block.settings.name_label }}{% if block.settings.show_required_asterisk %} *{% endif %}
        </label>
        <input
          type="text"
          id="ai-contact-name-{{ ai_gen_id }}"
          name="contact[name]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          value="{% if form.name %}{{ form.name }}{% endif %}"
          placeholder="{{ block.settings.name_placeholder }}"
          autocomplete="name"
          {% if form.errors contains 'name' %}
            aria-invalid="true"
            aria-describedby="ai-contact-form-error-{{ ai_gen_id }}"
          {% endif %}
          required
        >
      </div>

      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-email-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          {{ block.settings.email_label }}{% if block.settings.show_required_asterisk %} *{% endif %}
        </label>
        <input
          type="email"
          id="ai-contact-email-{{ ai_gen_id }}"
          name="contact[email]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          value="{% if form.email %}{{ form.email }}{% endif %}"
          placeholder="{{ block.settings.email_placeholder }}"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ai-contact-form-error-{{ ai_gen_id }}"
          {% endif %}
          required
        >
      </div>

      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-phone-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          {{ block.settings.phone_label }}{% if block.settings.phone_required and block.settings.show_required_asterisk %} *{% endif %}
        </label>
        <input
          type="tel"
          id="ai-contact-phone-{{ ai_gen_id }}"
          name="contact[phone]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          value="{% if form.phone %}{{ form.phone }}{% endif %}"
          placeholder="{{ block.settings.phone_placeholder }}"
          autocomplete="tel"
          {% if form.errors contains 'phone' %}
            aria-invalid="true"
            aria-describedby="ai-contact-form-error-{{ ai_gen_id }}"
          {% endif %}
          {% if block.settings.phone_required %}required{% endif %}
        >
      </div>

      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-message-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          {{ block.settings.message_label }}{% if block.settings.show_required_asterisk %} *{% endif %}
        </label>
        <textarea
          id="ai-contact-message-{{ ai_gen_id }}"
          name="contact[body]"
          class="ai-contact-form__textarea-{{ ai_gen_id }}"
          placeholder="{{ block.settings.message_placeholder }}"
          {% if form.errors contains 'body' %}
            aria-invalid="true"
            aria-describedby="ai-contact-form-error-{{ ai_gen_id }}"
          {% endif %}
          required
        >{% if form.body %}{{ form.body }}{% endif %}</textarea>
      </div>

      <button type="submit" class="ai-contact-form__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </button>
    </div>
  {%- endform -%}
</div>

