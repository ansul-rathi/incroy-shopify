    font-size: 18px;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const openMenu = document.getElementById("openMenu");
  const closeMenu = document.getElementById("closeMenu");
  const mobileMenu = document.getElementById("mobileMenu");
  const shopToggle = document.getElementById("shopToggle");
  const dropsToggle = document.getElementById("dropsToggle");
  const shopList = document.getElementById("shopList");
  const dropsList = document.getElementById("dropsList");

  openMenu.addEventListener("click", () => {
    mobileMenu.classList.add("active");
    openMenu.style.display = "none";
  });

  closeMenu.addEventListener("click", () => {
    mobileMenu.classList.remove("active");
    openMenu.style.display = "block";
  });

  shopToggle.addEventListener("click", () => {
    const isOpen = shopList.style.display === "block";
    shopList.style.display = isOpen ? "none" : "block";
    shopToggle.querySelector(".arrow").textContent = isOpen ? "→" : "↓";
  });

  dropsToggle.addEventListener("click", () => {
    const isOpen = dropsList.style.display === "block";
    dropsList.style.display = isOpen ? "none" : "block";
    dropsToggle.querySelector(".arrow").textContent = isOpen ? "→" : "↓";
  });
});
</script>
